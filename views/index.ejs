<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/bootstrap_v3.3.7.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <div class="col-md-4">
      <h2>Crear usuario</h2>

      <form action="/users/create" method="post" class="well">
        <div class="form-group">
          <label for="username">| Username</label>
          <input type="text" name="username" class="form-control" />
        </div>
        <input type="submit" class="btn btn-default" />
      </form>
    </div>

    <div class="col-md-6">
      <h2>Usuarios</h2>

      <ul>
        <% users.forEach(function(user){ %>
          <li>
            <strong><%= user.username %></strong>
            | &nbsp;
            <a href="/users/<%= user.id %>/destroy" class="btn btn-xs btn-warning"> delete</a>
            <ul>
              <li>
                | Crear tarea
                <form action="/users/<%= user.id %>/tasks/create" method="post" class="form-inline">
                  <div class="form-group">
                    <input type="text" name="title" class="input-sm form-control" />
                    <input type="submit" class="btn btn-sm btn-default" />
                  </div>
                </form>
              </li>
              <% user.Tasks.forEach(function(task){ %>
                <li>
                  <strong><%= task.title %></strong>
                  | &nbsp;
                  <a href="/users/<%= user.id %>/tasks/<%= task.id %>/destroy"  class="btn btn-xs btn-warning"> delete</a>
                </li>
              <% }); %>
            </ul>
          </li>
        <% }); %>
      </ul>
    </div>
  </body>
</html>
